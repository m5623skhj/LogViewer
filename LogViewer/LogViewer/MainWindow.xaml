<Window x:Class="LogViewerApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:LogViewerApp" Title="Log Viewer" Width="1100" Height="700" Background="#202020" Foreground="White">
    <Window.Resources>
        <local:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter"/>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock Text="{TemplateBinding Tag}" Foreground="Gray" Margin="8,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ZeroToVisibleConverter}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="LogItemTemplate">
            <DockPanel LastChildFill="True">
                <Button DockPanel.Dock="Left" Width="36" Height="28" Padding="0" Background="Transparent" BorderBrush="Transparent" Foreground="{Binding PinColor}" Click="PinButton_Click" ToolTip="핀 토글">
                    <TextBlock Text="📌" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <TextBlock TextWrapping="Wrap" Padding="6" Text="{Binding DisplayText}" Foreground="{Binding ForegroundBrush}" Background="{Binding BackgroundBrush}"/>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Top controls -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,0,0,8">
            <Button Content="파일 열기" Width="100" Click="BtnOpenFiles_Click"/>
            <TextBox x:Name="StartBox" Style="{StaticResource PlaceholderTextBox}" Tag="시작 (yyyy-MM-dd HH:mm:ss)" Width="220" Margin="8,0,0,0"/>
            <TextBox x:Name="EndBox" Style="{StaticResource PlaceholderTextBox}" Tag="종료 (yyyy-MM-dd HH:mm:ss)" Width="220" Margin="8,0,0,0"/>
            <Button Content="시간필터 적용" Width="120" Margin="8,0,0,0" Click="BtnApplyTimeFilter_Click"/>
        </StackPanel>
        <!-- Main log list -->
        <ListView x:Name="LogListView" Grid.Row="1" Grid.Column="0" ItemTemplate="{StaticResource LogItemTemplate}" Background="#1E1E1E" BorderThickness="1" BorderBrush="#333" FontFamily="Consolas" FontSize="13" />
        <!-- Right side controls -->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Background="#252525" Margin="8,0,0,0">
            <TextBlock Text="검색" Margin="8,8,8,6"/>
            <TextBox x:Name="SearchBox" Style="{StaticResource PlaceholderTextBox}" Tag="검색어(공백으로 다중)" Margin="8,0,8,0"/>
            <StackPanel Orientation="Horizontal" Margin="8,6,8,6">
                <TextBlock Text="모드:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="SearchModeCombo" Width="80" SelectedIndex="0">
                    <ComboBoxItem>AND</ComboBoxItem>
                    <ComboBoxItem>OR</ComboBoxItem>
                </ComboBox>
                <Button Content="검색" Width="80" Margin="8,0,0,0" Click="BtnSearch_Click"/>
                <Button Content="초기화" Width="80" Margin="8,0,0,0" Click="BtnClearFilter_Click"/>
            </StackPanel>
            <Button Content="통계 보기" Click="BtnStats_Click" Margin="0,6,0,6"/>
            <Separator Margin="0,6,0,6"/>
            <TextBlock Text="즐겨찾기" FontWeight="Bold" Margin="0,0,0,6"/>
            <Button Content="핀 항목만 보기" Click="BtnShowPinnedOnly_Click" Margin="0,0,0,6"/>
            <Button Content="핀 보기 해제" Click="BtnShowAll_Click" Margin="0,0,0,6"/>
            <StackPanel Margin="0,12,0,0">
                <TextBlock Text="통계" FontWeight="Bold" Margin="0,0,6,6"/>
                <TextBlock x:Name="TxtTotal" Text="Total: 0" Margin="0,2,0,0"/>
                <TextBlock x:Name="TxtInfo" Text="Info: 0" Margin="0,2,0,0"/>
                <TextBlock x:Name="TxtWarn" Text="Warn: 0" Margin="0,2,0,0"/>
                <TextBlock x:Name="TxtError" Text="Error: 0" Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>
        <!-- footer -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Background="#1B1B1B" Foreground="White" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>